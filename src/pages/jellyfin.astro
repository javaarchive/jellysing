---
import CenteredContent from '../components/CenteredContent.astro';
import JellyfinLogin from '../components/JellyfinLogin';
import JellysingBackendPicker from '../components/JellysingBackend';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login to Jellyfin.">
	<main>
		<CenteredContent>
			<h1>Add Credentials</h1>
			<p>
				These credentials are stored in local storage so they never touch the server.
			</p>
			<div class="m-auto p-4 max-w-md">
				<JellyfinLogin client:visible />
			</div>
			<div class="m-auto p-4 max-w-md">
				<JellysingBackendPicker client:visible />
			</div>
		</CenteredContent>
	</main>
</Layout>

